using System;

class Program
{
    static int FindMinIndex(int[] arr, int start, int end)
    {
        int minIndex = start;

        for (int i = start + 1; i <= end; i++)
        {
            if (arr[i] < arr[minIndex])
            {
                minIndex = i;
            }
        }

        return minIndex;
    }

    static void SelectionSortRecursive(int[] arr, int start, int n)
    {
        if (start >= n - 1)
        {
            return;
        }

        int minIndex = FindMinIndex(arr, start, n - 1);

        if (minIndex != start)
        {
            int temp = arr[start];
            arr[start] = arr[minIndex];
            arr[minIndex] = temp;
        }

        SelectionSortRecursive(arr, start + 1, n);
    }

    static void Main(string[] args)
    {
        int[] arr = { 64, 25, 12, 22, 11 };

        Console.WriteLine("Original array:");
        Console.WriteLine(string.Join(", ", arr));

        SelectionSortRecursive(arr, 0, arr.Length);

        Console.WriteLine("Sorted array:");
        Console.WriteLine(string.Join(", ", arr));
    }
}
